<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here.-->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <!--<item name="android:textColorSecondary"></item> Uncomment for icon overflow color-->
        <item name="android:textColorTertiary">@color/tertiaryTextColor</item>
        <item name="android:textColorPrimaryInverse">@color/inverseTextColor</item>
        <!--<item name="android:background">@color/primaryDarkColor</item>-->
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here.-->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorTertiary">@color/tertiaryTextColor</item>
        <item name="android:textColorPrimaryInverse">@color/inverseTextColor</item>
    </style>
    
</resources>
