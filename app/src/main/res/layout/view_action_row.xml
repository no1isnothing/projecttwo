<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="8dp"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/pref_list_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:inputType="textPersonName"
        android:hint="Enter New Type"
        android:digits="abcdefghijklmnopqrstuvwxyz1234567890 "
        android:maxLength="20"
        app:layout_constraintStart_toEndOf="@id/pref_list_add_button"
        app:layout_constraintTop_toTopOf="@id/pref_list_add_button" />

    <Button
        android:id="@+id/color_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/pref_list_edit_text"
        app:layout_constraintTop_toTopOf="@id/pref_list_add_button"/>


    <ImageButton
        android:id="@+id/action_row_button"
        app:srcCompat="@drawable/ic_delete_black"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="48dp"
        />

</LinearLayout>